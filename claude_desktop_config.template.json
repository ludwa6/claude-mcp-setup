{
  "mcpServers": {
    "wpcom": {
      "command": "npx",
      "args": ["-y", "@automattic/mcp-wpcom-remote@latest"]
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "YOUR_GITHUB_TOKEN_HERE",
        "GITHUB_MCP_SERVER_MODE": "remote"
      }
    }
  }
}
